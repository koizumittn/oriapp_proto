<% if @books.present? %>
  <% @books.each do |book| %>
    <div class="col-xs-6">
      <%= link_to (image_tag(book.image_url, style: "width: 70px;height: 100px;display: inline-block;")), book.url %>
      <%= book.title %>
      <%= form_for book, url: books_registration_path do |f| %>
        <%= f.hidden_field :title %>
        <%= f.hidden_field :image_url %>
        <%= f.hidden_field :url %>
        <%= f.submit '登録' %>
      <% end %>
    </div>
  <% end %>
<% end %>